{% extends "SaxidLdapProxyBundle::base.html.twig" %}

{% block body %}
	<div class="page-header">
		<h1>Dienstepasswörter verwalten</h1>
	</div>

<!-- 	<ul>
		{% for service in services %}
		<li><a href="#anchor-{{ service.name }}">{{ service.name }}</a></li>
		{% endfor %}
	</ul> -->

	<section id="manage-passwords">
		<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
			{% for service in services %}
			{% if service.password %}
			<div class="panel panel-default">
				<div class="panel-heading" role="tab" id="heading-{{ service.name }}">
					<h4 class="panel-title">
						<a class="collapsed password-button" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-{{ service.name }}" aria-expanded="{% if loop.first %}true{% else %}false{% endif %}" aria-controls="collapse-{{ service.name }}">
							{{ service.name }} ({{ service.academy }}) <i class="fa fa-cog"></i>
						</a>
					</h4>
				</div>
				<div id="collapse-{{ service.name }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading-{{ service.name }}">
					<div class="panel-body">
						<form>
							<div class="alert alert-danger" role="alert"><strong>Platzhalter:</strong> Platzhalter für Fehlermeldung!</div>
							{% if errors|length > 0 %}
							{% for error in errors %}
								<div class="alert alert-danger" role="alert"><strong>Fehler:</strong> {{ error }}</div>
							{% endfor %}
							{% endif %}

							<div class="form-group form-inline">
								<input type="password" class="form-control" id="newPassword" placeholder="Neues Passwort">
								<input type="password" class="form-control" id="newPasswordCheck" placeholder="Bestätigung">
								<button type="submit" class="btn btn-primary">Passwort ändern</button> oder <button type="submit" class="btn btn-default">Neues Passwort erzeugen</button>
							</div>		
						</form>
					</div>
				</div>
			</div>
			{% endif %}
			{% endfor %}
		</div>
	</section>
{% endblock body %}